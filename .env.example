# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/asset_management?schema=public"
TIMESCALEDB_URL="postgresql://postgres:postgres@localhost:5432/asset_management?schema=timescale"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# API Configuration
API_PORT=4000
API_PREFIX="api"
API_VERSION="v1"

# Frontend Configuration
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_WS_URL="ws://localhost:4000"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_DIRECTORY="./uploads"

# RFID Configuration
RFID_ENABLED="false"
RFID_READER_TYPE="llrp"  # llrp, impinj, zebra
RFID_READER_HOST=""
RFID_READER_PORT="5084"
RFID_POLLING_INTERVAL="1000"  # milliseconds

# Email Configuration (for notifications)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@assetmanagement.com"

# Application Configuration
NODE_ENV="development"
APP_NAME="Asset Management System"
APP_URL="http://localhost:3000"

# Logging
LOG_LEVEL="debug"  # error, warn, info, debug
LOG_FILE="./logs/app.log"

# Session Configuration
SESSION_SECRET="your-session-secret-change-this"
SESSION_MAX_AGE="86400000"  # 24 hours in milliseconds

# Geofencing Configuration
GEOFENCE_PRECISION="10"  # meters
GEOFENCE_CHECK_INTERVAL="5000"  # milliseconds

# Rate Limiting
RATE_LIMIT_WINDOW="15"  # minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Webhook Configuration
WEBHOOK_TIMEOUT="5000"  # milliseconds
WEBHOOK_RETRY_ATTEMPTS="3"

# Report Generation
REPORT_TEMP_DIRECTORY="./temp/reports"
REPORT_RETENTION_DAYS="30"

# Backup Configuration
BACKUP_ENABLED="false"
BACKUP_DIRECTORY="./backups"
BACKUP_SCHEDULE="0 2 * * *"  # Cron format: 2 AM daily

# Feature Flags
FEATURE_MOBILE_APP="true"
FEATURE_RFID_TRACKING="true"
FEATURE_BARCODE_SCANNING="true"
FEATURE_QR_SCANNING="true"
FEATURE_GEOFENCING="true"
FEATURE_WORKFLOWS="true"
FEATURE_MAINTENANCE="true"
FEATURE_INTEGRATIONS="true"
